<article class="card product-item">
    <header class="card__header">
        <h1 class="product__title">{{title}}</h1>
    </header>
    <div class="card__image">
        <img src="{{imageUrl}}" alt="{{title}}">
    </div>
    <div class="card__actions">
        <a href="/products/{{_id}}" class="btn">Details</a>
        {{#if isAuthenticated}}
        {{> add-to-cart}}
        {{/if}}
    </div>
</article>