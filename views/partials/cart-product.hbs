<li class="cart__item">
    <h1>{{productId.title}}</h1>
    <h2>Quantity: ({{quantity}})</h2>
    <form action="/cart-delete/{{productId._id}}" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button class="btn danger" type="submit">
            Remove
        </button>
    </form>
</li>